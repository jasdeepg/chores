<div class="center">
  <h1> 
  <span id="first-line">What do</span>
  <br>
  <span id="second-line">I <span id="clean">clean</span>?</span>
</h1>
</div>
<br>
<div class="row">
  <div class="center-row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>You</th>
        <th>Captain of</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <div id="wrapper">
      <% @users.each do |user| %>
        <% if user.chore_done? %>
          <tr class="success">
        <% else %>
          <tr class="error">
        <% end %>
          <td><%= user.name %></td>
          <td><%= user.chore.nil? ? "NA" : user.chore.name %></td>
          <td><% if user.chore_done? %>
              <i class="icon-thumbs-up" style="width:50px;height:50px;"></i>
            <% else %>
              <i class="icon-thumbs-down" style="width:50px;height:50px;"></i>
            <% end %>
          </td>
          <td><%= link_to 'Done yet?', edit_user_path(user) %></td>
          <!--<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </div>
    </table>
  </div>
</div>